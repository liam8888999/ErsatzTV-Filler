{
  "name": "ersatztv-filler",
  "version": "1.17.8",
  "description": "Currently this script  generates weather forecast, news and channel currently offline filler for ErsatzTV or similar programs.",
  "main": "server/app.js",
  "bin": {
    "ersatztv-filler": "server/app.js"
  },
  "scripts": {
    "dev": "node server/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release-minor": "release-it --increment minor --verbose",
    "release-major": "release-it --increment major --verbose",
    "release-patch": "release-it --increment patch --verbose",
    "build": "pkg package.json",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liam8888999/ErsatzTV-Filler"
  },
  "author": "liam8888999",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/liam8888999/ErsatzTV-Filler/issues"
  },
  "homepage": "https://github.com/liam8888999/ErsatzTV-Filler#readme",
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "archiver": "^7.0.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cheerio": "^1.0.0",
    "contrast-color": "^1.0.1",
    "cookie-parser": "^1.4.7",
    "cron-job-manager": "^2.3.1",
    "dotenv": "^17.0.1",
    "ejs": "^3.1.10",
    "epg-parser": "^0.3.1",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "extract-zip": "^2.0.1",
    "fs": "^0.0.1-security",
    "google-tts-api": "^2.0.2",
    "image-size": "^2.0.2",
    "jimp": "^0.22.12",
    "jsonwebtoken": "^9.0.2",
    "marked": "^16.0.0",
    "moment-timezone": "^0.6.0",
    "mp3-duration": "^1.1.0",
    "multer": "^2.0.0",
    "mustache": "^4.2.0",
    "node-cron": "^4.2.0",
    "node-fetch": "^3.3.0",
    "nodemon": "^3.1.10",
    "random-quotes": "^1.3.0",
    "release-it": "^19.0.3",
    "save-dev": "^0.0.1-security",
    "simple-tts-mp3": "^1.1.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "wordwrap": "^1.0.0",
    "xmlbuilder": "^15.1.1",
    "xmlbuilder2": "^3.1.1"
  },
  "pkg": {
    "entry": "server/app.js",
    "scripts": "server/**/*.js",
    "assets": [
      "server/templates/**/*",
      "audio-fallback/**/*",
      "Changelog.md",
      "ffmpeg/**/*",
      "./node_modules/axios/dist/node/axios.cjs"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-win-x64",
      "node20-macos-x64"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "V${version}"
    },
    "github": {
      "release": true,
      "releaseName": "V${version} - Beta"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "Changelog.md",
        "header": "# Changelog",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "added",
              "section": "Added"
            },
            {
              "type": "fix",
              "section": "Fixed"
            },
            {
              "type": "removed",
              "section": "Removed"
            },
            {
              "type": "changed",
              "section": "Changed"
            },
            {
              "type": "note",
              "section": "Note"
            },
            {
              "type": "chore",
              "hidden": true
            },
            {
              "type": "test",
              "hidden": true
            }
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cron-job-manager": "^2.3.1",
    "epg-parser": "^0.3.1",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "fs": "^0.0.1-security",
    "husky": "^9.1.7",
    "jimp": "^0.22.12",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.6.0",
    "multer": "^2.0.0",
    "node-cron": "^4.2.0",
    "nodemon": "^3.1.10",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.2",
    "xmlbuilder": "^15.1.1",
    "xmlbuilder2": "^3.1.1"
  }
}
