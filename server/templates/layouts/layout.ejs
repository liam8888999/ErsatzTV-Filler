}

.slider {
 position: absolute;
 cursor: pointer;
 top: 0;
 left: 0;
 right: 0;
 bottom: 0;
 background-color: #ccc;
 transition: 1s;
 border-radius: 5px;
}

.slider:before {
 position: absolute;
 content: "";
 height: 20px;
 width: 20px;
 left: 3px;
 bottom: 3px;
 background-color: white;
 transition: 1s;
 border-radius: 5px;
}

input:checked + .slider {
 background-color: #04aa6d;
}

input:checked + .slider:before {
 transform: translateX(24px);
}






